{
  "id": "https://openebench.bsc.es/monitor/metrics/metrics.json",
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "title": "OpenEBench Quality Metrics Schema",
  "definitions": {
      "Identity" : {
        "type": "object",
        "properties": {
          "domain": {
            "type": "boolean"
          },
          "logo": {
            "type": "boolean"
          },
          "recognizability": {
            "type": "boolean"
          },
          "uniqueness": {
            "type": "boolean"
          },
          "trademark": {
            "type": "boolean"
          }
        }
      },
      "Summary" : {
        "type": "object",
        "properties": {
          "brief": {
            "description": "a short description is provided",
            "type": "boolean"
          },
          "description": {
            "type": "boolean"
          },
          "concept": {
            "type": "boolean"
          },
          "rationale": {
            "type": "boolean"
          },
          "architecture": {
            "type": "boolean"
          },
          "usecases": {
            "type": "boolean"
          },
          "case_studies": {
            "type": "boolean"
          }
        }
      },
      "Copyright" : {
        "type": "object",
        "properties": {
          "description": {
            "description": "copyright text on the webpage (excerpt)",
            "type": "string"
          }
        }
      },
      "Website" : {
        "type": "object",
        "properties": {
          "operational": {
            "description": "http response code from the last check",
            "type": "integer"
          },
          "last_check": {
            "description": "last time the homepage has been checked",
            "type": "string",
            "format": "date-time"
          },
          "copyright": {
            "$ref": "#/definitions/Copyright"
          },
          "acknowledgement": {
            "description": "web site states who developed/develops the software, funders etc.",
            "type": "boolean"
          },
          "license": {
            "description": "web site states a license",
            "type": "boolean"
          },
          "resources": {
            "type": "boolean"
          },
          "robots": {
            "description": "search engines allowed to track the website",
            "type": "boolean"
          },
          "ssl": {
            "description": "web site access is properly secured (no property = not ssl, false = ssl troubles)",
            "type": "boolean"
          },
          "access_time": {
            "description": "homepage load time in ms.",
            "type": "integer"
          }
        }
      },
      "Build": {
        "type": "object",
        "properties": {
          "instructions": {
            "description": "whether instructions for building the software are provided",
            "type": "boolean"
          },
          "dependencies": {
            "description": "whether the list of all third-party dependencies for proper project build is provided",
            "type": "boolean"
          },
          "automated": {
            "description": "whether the automated build system used",
            "type": "boolean"
          },
          "unix": {
            "description": "operative system used to build the software (unix or not)",
            "type": "boolean"
          }
        }
      },
      "Deployment": {
        "type": "object",
        "properties": {
          "instructions": {
            "description": "whether instructions for installing the software are provided",
            "type": "boolean"
          },
          "dependencies": {
            "description": "whether the list of all third-party runtime dependencies is provided",
            "type": "boolean"
          }
        }            
      },
      "License": {
        "type": "object",
        "properties": {
          "open_source": {
            "description": "project has an open source license",
            "type": "boolean"
          },
          "osi": {
            "description": "software has an Open Software Initiative (OSI)-recognised license",
            "type": "boolean"
          }
        }
      },
      "Documentation": {
        "type": "object",
        "properties": {
          "api": {
            "description": "software has an API documentation (e.g. JavaDoc, Doxygen)",
            "type": "boolean"
          },
          "api_versioned": {
            "description": "whether the API documentation is held under version control system",
            "type": "boolean"
          },
          "howto": {
            "type": "boolean"
          },
          "tutorial": {
            "type": "boolean"
          },
          "citation": {
            "type": "boolean"
          },
          "help": {
            "type": "boolean"
          },
          "faq": {
            "type": "boolean"
          },
          "general": {
            "type": "boolean"
          },
          "build": {
            "type": "boolean"
          },
          "manual": {
            "type": "boolean"
          },
          "terms_of_use": {
            "type": "boolean"
          },
          "training_material": {
            "type": "boolean"
          }
        }
      },
      "NReferences": {
        "type": "object",
        "properties": {
          "year": {
            "description": "the year of the referenced articles",
            "type": "string"
          },
          "count": {
            "description": "number of referenced articles published in this year",
            "type": "integer"
          }
        }
      },
      "NCitations": {
        "type": "object",
        "properties": {
          "year": {
            "description": "the year citations counted",
            "type": "string"
          },
          "count": {
            "description": "number of citations for the year",
            "type": "integer"
          }
        }
      },
      "PublicationEntry": {
        "type": "object",
        "properties": {
          "doi": {
            "type": "string"
          },
          "pmid": {
            "type": "string"
          },
          "pmcid": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "year": {
            "type": "integer"
          },
          "ref_count": {
            "type": "integer"
          },
          "cit_count": {
            "type": "integer"
          },
          "refs": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/NReferences"
            }
          },
          "citations": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/NCitations"
            }
          }
        }
      },
      "Publication": {
        "type": "object",
        "properties": {
          "entries" : {
            "type": "array",
            "items": {
              "$ref": "#/definitions/PublicationEntry"
              }
           }  
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "identity": {
            "$ref": "#/definitions/Identity"
          },
          "summary": {
            "$ref": "#/definitions/Summary"
          },
          "website": {
            "$ref": "#/definitions/Website"
          },
          "build": {
            "$ref": "#/definitions/Build"
          },
          "deployment": {
            "$ref": "#/definitions/Deployment"
          },
          "license": {
            "$ref": "#/definitions/License"
          },
          "documentation": {
            "$ref": "#/definitions/Documentation"
          },
          "publications": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Publication"
            }
          },
          "readme": {
            "type": "boolean"
          },
          "governance": {
            "description": "whether the project has defined a governance model",
            "type": "boolean"
          }
        }
      },
      "Binaries": {
        "type": "object",
        "properties": {
          "freeness": {
            "type": "boolean"
          },
          "registration": {
            "type": "boolean"
          }
        }
      },
      "Repository": {
        "type": "object",
        "properties": {
          "anonymous": {
            "type": "boolean"
          }
        }
      },
      "Sourcecode": {
        "type": "object",
        "properties": {
          "interpreted": {
            "description": "whether the sourcecode is interpreted (Python, Perl, Ruby) or compiled (C, C++, Fortran)",
            "type": "boolean"
          },
          "copyright": {
            "description": "each source code file has a copyright statement",
            "type": "boolean"
          },
          "license": {
            "type": "boolean"
          },
          "license_headers": {
            "description": "each source code file has a license header",
            "type": "boolean"
          },
          "readme": {
            "type": "boolean"
          },
          "free": {
            "description": "source distributions are freely available",
            "type": "boolean"
          },
          "public": {
            "description": "sourcecode is available without the need for any registration",
            "type": "boolean"
          },
          "repository": {
            "$ref": "#/definitions/Repository"
          }
        }
      },
      "Distribution": {
        "type": "object",
        "properties": {
          "readme": {
            "type": "boolean"
          },
          "binaries": {
            "$ref": "#/definitions/Binaries"
          },
          "sourcecode": {
            "$ref": "#/definitions/Sourcecode"
          },
          "vre": {
            "type": "boolean"
          },
          "packages": {
            "type": "boolean"
          }
        }
      },
      "IssueTracking": {
        "type": "object",
        "properties": {
          "public_tracker": {
            "type": "boolean"
          },
          "resolve_time": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Support": {
        "type": "object",
        "properties": {
          "email": {
            "type": "boolean"
          },
          "issue_tracking": {
            "$ref": "#/definitions/IssueTracking"
          }
        }
      }
  },
  "type": "object",
  "properties": {
      "@id": {
           "type": "string",
           "format": "uri"
      },
      "project": {
         "$ref": "#/definitions/Project"
      },
      "distribution": {
         "$ref": "#/definitions/Distribution"
      },
      "support": {
         "$ref": "#/definitions/Support"
      }
   }
}